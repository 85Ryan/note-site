{
  "env": {
    "browser": true,
    "es6": true
  },
  "root": true,
  "extends": ["eslint:recommended", "hexo"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "strict": "off",
    "wrap-iife": ["error", "inside"],
    "operator-linebreak": ["error", "after"],
    "node/no-unpublished-require": "off",
    "node/no-unsupported-features": "off"
  }
}
