// https://github.com/chriskempson/tomorrow-theme
highlight-background = #fff
highlight-current-line = #efefef
highlight-selection = #d6d6d6
highlight-foreground = #4d4d4c
highlight-comment = #a0a1a7
highlight-red = #c82829
highlight-orange = #f5871f
highlight-yellow = #eab700
highlight-green = #718c00
highlight-aqua = #3e999f
highlight-blue = #4271ae
highlight-purple = #8959a8
color-marked = #ffeef0
color-marked-font = #b31d28

pre, code
  font-family font-mono
  color highlight-foreground
  background color-body
  font-size 0.95em

code
  padding 0 5px

pre
  padding 10px 15px
  line-height 22px
  code
    border none
    display block
    padding 0

.highlight
  background color-body
  padding 10px 15px
  color highlight-foreground
  border-radius 2px
  overflow auto
  margin 15px 0
  table
    margin 0 !important
    border 0
    width auto
    th, td
      padding 0
  figcaption
    clearfix()
    margin -5px 0 5px
    font-size 0.9em
    color highlight-comment
    a
      float right
      color highlight-comment
  pre
    padding 0
    border none
    background none
  .line
    height 22px
  .marked
    background-color color-marked
    color color-marked-font !important
    span
      color color-marked-font !important
  .gutter
    clearfix()
    text-align right
    .line
      color color-gray
      padding-right 15px

pre
  .comment
    font-style italic
    color highlight-comment
  .title
    color highlight-comment
  .variable, .attribute, .tag, .attr, .regexp, .ruby .constant, .xml .tag .title, .xml .pi, .xml .doctype, .html .doctype, .css .id, .css .class, .css .pseudo
    color highlight-red
  .number, .preprocessor, .built_in, .literal, .params, .constant
    color highlight-orange
  .class, .ruby .class .title, .css .rules .attribute
    color highlight-green
  .string, .value, .inheritance, .header, .ruby .symbol, .xml .cdata
    color highlight-green
  .css .hexcolor
    color highlight-aqua
  .function, .python .decorator, .python .title, .ruby .function .title, .ruby .title .keyword, .perl .sub, .javascript .title, .coffeescript .title
    color highlight-blue
  .keyword, .javascript .function
    color highlight-purple