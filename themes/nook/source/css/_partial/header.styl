logo-size = 30px
header-height = 50px

#header
  margin-top logo-size
  margin-bottom logo-size
  position relative
  @media print
    display none
  a
    border none

#header-inner
  display flex
  height header-height
  flex-flow row nowrap
  justify-content flex-start
  align-items center
  @media mq-mobile
    justify-content center

#logo-wrap
  flex 0 logo-size
  margin 0
  padding 0
  height logo-size
  line-height logo-size

#logo
  hide-text()
  width logo-size
  height logo-size
  .icon
    width logo-size
    height logo-size

#main-nav
  height header-height
  flex 1 auto
  padding-left width-normal
  z-index 999
  display none
  @media mq-normal
    display block

.main-nav-list
  margin 0
  padding 0
  height header-height
  display flex
  flex-flow row nowrap
  justify-content flex-start
  align-items center

.main-nav-list-item
  list-style none
  height logo-size

.main-nav-link
  color color-default
  text-transform uppercase
  letter-spacing 1.5px
  line-height logo-size
  font-weight 600
  font-size 16px
  display inline-block
  margin-left width-normal
  position relative
  @extend title-link

.current:before, .current:hover:before
  transform scaleX(1)
  visibility visible

#sub-nav
  flex 0 90px
  display none
  @media mq-normal
    display block

.sub-nav-list
  display flex
  flex-flow row nowrap
  width 90px
  height header-height
  margin 0
  padding 0
  list-style none
  justify-content space-between
  align-items center

.sub-nav-list-item
  width icon-normal
  height icon-normal
  flex 0 icon-normal

.sub-nav-link
  .icon
    fill color-gray
    opacity 0.5
    &:hover
      fill color-default
      opacity 1

// Mobile Nav
#menu-checkbox:checked ~ .mobile-nav-container
  visibility visible

#menu-label
  display block
  cursor pointer
  position absolute
  top 45px
  left 20px
  z-index 99999
  transition transform 0.25s ease-out
  @media mq-normal
    display none
  span
    width 20px
    height 3px
    background-color color-default
    display block
    margin-bottom 4px
    transition transform 0.25s ease-out, background 0.25s ease-out

#mobile-nav-container, .mobile-main-nav
  width 100%
  height 100vh
  position absolute
  left 0
  z-index 2

#menu-checkbox
  display none
  &:checked ~ .mobile-nav-container > .mobile-main-nav
    top 0
  &:checked ~ #menu-label
    transform rotate(135deg) translateY(5px)
  &:checked ~ #menu-label span:nth-of-type(1)
    transform rotate(90deg) translateX(6px)
  &:checked ~ #menu-label span:nth-of-type(3)
    transform rotate(90deg) translateX(-6px)
  &:checked ~ #menu-label span
    background #fff

#mobile-nav-container
  visibility hidden
  display block
  overflow hidden
  top 0
  line-height 1
  transition visibility 0.25s ease-out
  transition-timing-function cubic-bezier(0.19, 1, 0.22, 1)
  @media mq-normal
    display none
  .mobile-main-nav
    display flex
    flex-direction column
    justify-content flex-start
    align-items center
    text-transform uppercase
    font-weight 600
    background rgba(0, 0, 0, 0.9)
    top 100vh
    transition top 0.25s ease-out
    transition-timing-function cubic-bezier(0.19, 1, 0.22, 1)
    a
      color #fff
      margin 20px 0
      padding 0 2px 5px 2px
      width fit-content
      font-size 18px
      border-bottom 0
      &:first-of-type
        margin-top 45px
    .current
      border-bottom 3px solid color-body