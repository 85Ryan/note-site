header-padding-normal = 10px
header-padding-max = 30px
logo-size = 50px

#header
  margin-top 32px
  position relative
  @media print
    display none
  a
    border none

#header-inner
  display flex
  flex-flow row nowrap
  align-self center
  @media mq-mobile
    justify-content center

#logo-wrap
  flex 0 logo-size

#logo
  hide-text()
  width logo-size
  height logo-size
  .icon
    width logo-size
    height logo-size
    padding header-padding-normal

#main-nav
  width 100%
  display none
  flex 1px auto
  padding-left 20px
  position relative
  z-index 9999
  @media mq-normal
    display block
  ul
    margin 0
    padding 0
    li
      float left
      list-style none
      .main-nav-list-link
        color color-default
        text-decoration none
        text-transform uppercase
        letter-spacing 2px
        line-height logo-size
        transition 0.25s
        font-weight 600
        font-size 16px
        display inline-block
        margin 0 15px
        &:hover
          border-bottom 3px solid color-gray
          transition border-bottom 0.1s ease-out
      .current, .current:hover
        border-bottom 3px solid color-default
  .sub-nav
    position absolute
    right 0
    top 15px
    li
      flex 0 logo-size
      .sub-nav-link
        border none
        width logo-size
        height logo-size
        margin 0
        margin-left 15px
        &:hover
          border-bottom none
      .icon
        width 20px
        height 20px
        fill color-gray
        opacity 0.5
        &:hover
          fill color-default
          opacity 1

// Mobile Nav
#menu-checkbox:checked ~ .mobile-nav-container
  visibility visible

#menu-label
  display block
  cursor pointer
  position absolute
  top 45px
  left 20px
  z-index 99999
  transition transform 0.25s ease-out
  @media mq-normal
    display none
  span
    width 20px
    height 3px
    background-color color-default
    display block
    margin-bottom 4px
    transition transform 0.25s ease-out, background 0.25s ease-out

#mobile-nav-container, .mobile-main-nav
  width 100%
  height 100vh
  position absolute
  left 0
  z-index 2

#menu-checkbox
  display none
  &:checked ~ .mobile-nav-container > .mobile-main-nav
    top 0
  &:checked ~ #menu-label
    transform rotate(135deg) translateY(5px)
  &:checked ~ #menu-label span:nth-of-type(1)
    transform rotate(90deg) translateX(6px)
  &:checked ~ #menu-label span:nth-of-type(3)
    transform rotate(90deg) translateX(-6px)
  &:checked ~ #menu-label span
    background #fff

#mobile-nav-container
  visibility hidden
  display block
  overflow hidden
  top 0
  line-height 1
  transition visibility 0.25s ease-out
  transition-timing-function cubic-bezier(0.19, 1, 0.22, 1)
  @media mq-normal
    display none
  .mobile-main-nav
    display flex
    flex-direction column
    justify-content flex-start
    align-items center
    text-transform uppercase
    font-weight 600
    background rgba(0, 0, 0, 0.9)
    top 100vh
    transition top 0.25s ease-out
    transition-timing-function cubic-bezier(0.19, 1, 0.22, 1)
    a
      color #fff
      margin 20px 0
      padding 0 2px 5px 2px
      width -webkit-fit-content
      width -moz-fit-content
      width fit-content
      font-size 18px
      border-bottom 0
      &:first-of-type
        margin-top 45px
    .current
      border-bottom 3px solid color-body
