#content-wrap
  clearfix()
  background white
  min-height min-height

#content-main
  clearfix()
  max-width content-width
  margin 60px auto
  .article
    width 100%
    padding 40px 0
    .post-header
      position relative
      border-bottom 1px solid color-border
      .post-title
        font-size 24px
        text-transform uppercase
        font-family font-sans
        margin-bottom 0
        font-weight 600
        line-height 1.6
        padding-right 30px
        @media mq-large
          padding-right 0
        a
          color color-default
          text-decoration none
          border-bottom none
          padding-bottom 3px
          &:hover
            border-bottom 3px solid color-gray
            transition border-bottom 0.1s ease-out
      .post-meta
        color color-gray
        font-size 12px
        text-transform uppercase
      .post-category
        font-size 12px
        margin-left 15px
        position relative
        text-transform uppercase
        .post-category-link
          margin-left 10px
          line-height 1.6
          color color-gray
          text-decoration none
          border-bottom none
          &:hover
            border-bottom 1px solid color-gray
            transition border-bottom 0.1s ease-out
        .icon
          position absolute
          top 0
          left -6px
          height 12px
          width 12px
          fill color-gray
    .post-content
      clearfix()
      padding-top 18px
      .more-link
        text-transform uppercase
        font-weight 600
        padding-bottom 3px
        &:hover
          border-bottom 2px solid color-default
          transition border-bottom 0.1s ease-out
      h1, h2, h3, h4, h5, h6
        text-transform capitalize
      @media mq-normal
        h1::before, h2::before, h3::before, h4::before, h5::before, h6::before
          position absolute
          right calc(100% + 10px)
          bottom 0
          color color-gray
          font-size 0.85rem
          font-weight normal
          font-variant 'small-caps'
          font-family font-serif
          border 0
          border-radius 0
          left auto
          font none
          padding 0
          vertical-align baseline
          line-height 20px
        h1::before
          content 'H1'
          bottom 0.45em
        h2::before
          content 'H2'
          bottom 0.2em
        h3::before
          content 'H3'
          bottom 0.16em
        h4::before
          content 'H4'
          bottom 0.14em
        h5::before
          content 'H5'
          bottom 0.1em
        h6::before
          content 'H6'
          bottom 0.1em
      .video-container
        position relative
        padding-top (9 / 16 * 100)% // 16:9 ratio
        margin-bottom 16px
        height 0
        overflow hidden
        iframe, object, embed
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          margin-top 0
  .post-link-title .icon
    width 12px
    height 12px
    margin-right 10px

#post-separator
  clearfix()
  display block
  width 15%
  height 5px
  background color-default
  margin 50px 0

.post-footer
  clearfix()
  padding 24px 0
  line-height 1.6em
  border-bottom 1px solid color-border
  a
    font-weight 600

#post-tag-wrap
  width 100%
  overflow hidden

.post-tag-list
  display inline-flex
  flex-flow row nowrap
  padding-bottom 0
  padding-left 0
  .post-tag-list-item
    font-size 12px
    list-style none
    white-space nowrap
    flex-wrap nowrap
    margin-right 15px
    .post-tag-list-link
      color color-gray
      padding-bottom 3px
      text-transform uppercase
      text-decoration none
      border none
      &:hover
        color color-default
        border-bottom 2px solid color-default
      &:before
        content '#'
        margin-right 3px

#post-social-icons
  display flex
  border-top 1px solid color-border
  margin-top 12px
  padding-top 24px
  align-items center
  flex-flow row nowrap

.post-share-links
  flex-grow 1
  flex-shrink 1
  flex-basis 0%
  margin-top 0
  padding-top 0
  .post-share-links-inner
    flex-grow 1
    flex-shrink 1
    flex-basis auto
    display flex
    margin-top 0
    padding-top 0
    align-items center
    .post-share-wechat, .post-share-weibo, .post-share-twitter
      width 24px
      height 24px
      display flex
      margin-top 0
      padding-top 0
      margin-right 16px
      .icon
        width 24px
        height 24px
        fill color-border
        vertical-align middle
    .post-share-wechat
      @media mq-mobile
        display none
    a
      border none

#post-reactions-inner
  display flex
  margin-top 0
  padding-top 0
  align-items center
  flex-flow row nowrap
  justify-content flex-end

.post-reactions-title
  flex-grow 1
  flex-shrink 1
  flex-basis 0%
  padding-top 0
  margin-top 0
  display block
  padding-right 10px
  color color-gray
  font-size 12px
  font-weight 600
  line-height 1.2
  letter-spacing 1.2px
  text-transform uppercase

.post-reactions-button
  margin-top 0
  display flex
  padding-top 0
  button
    width 24px
    cursor pointer
    height 24px
    margin-top 0
    margin-right 8px
    display inline-flex
    padding-top 0
    align-items center
    border none
    border-radius 50%
    justify-content center
    background-color color-border
    transition-duration 250ms, 250ms, 250ms
    transition-timing-function ease, ease, ease
    transition-delay initial, initial, initial
    transition-property background-color, color, tranform
    .icon
      width 24px
      height 24px
      vertical-align middle
      fill color-gray
  #reaction-good
    margin-right 0

#reaction-bad.active
  background-color rgb(255, 70, 66)
  transform scale(1.15)
  .icon
    fill #fff
    transform scale(1.15)

#reaction-notbad.active
  background-color rgb(255, 209, 57)
  transform scale(1.15)
  .icon
    fill #fff
    transform scale(1.15)

#reaction-good.active
  background-color rgb(38, 203, 124)
  transform scale(1.15)
  .icon
    fill #fff
    transform scale(1.15)

#reaction-bad:hover
  background-color rgb(255, 70, 66)
  .icon
    fill #fff

#reaction-notbad:hover
  background-color rgb(255, 209, 57)
  .icon
    fill #fff

#reaction-good:hover
  background-color rgb(38, 203, 124)
  .icon
    fill #fff

.wechat-links
  position relative
  text-align center
  @media mq-mobile
    display none
  &:hover .wechat-qrcode-wrap
    visibility visible
    opacity 1
  .icon
    cursor pointer
  .wechat-qrcode-wrap
    position absolute
    top -195px
    left -62px
    visibility hidden
    transition 0.2s opacity ease, visibility 0.2s
    background-color #fff
    border 1px solid color-border
    border-radius 4px
    box-shadow 0 5px 10px rgba(0, 0, 0, 0.15)
    height 170px
    width 150px
    z-index 99999
    &:before
      border solid 7px transparent
      border-top-color color-border
      content ''
      position absolute
      bottom -14px
      left 68px
    &:after
      border solid 6px transparent
      border-top-color #fff
      content ''
      position absolute
      bottom -12px
      left 68px
    .wechat-qrcode-title, .wechat-qrcode-hint
      color color-gray
      font-size 12px
    .wechat-qrcode-title
      background-color color-body
      border-radius 4px
      height 32px
      line-height 32px
    .wechat-qrcode-img
      height 80px
      margin 10px auto
      width 80px
    .wechat-qrcode-hint
      line-height 15px
      margin 0 auto
      width 110px

.post-share-links .post-share-links-inner .post-share-weibo:hover .icon
  fill #d52b2a

.post-share-links .post-share-links-inner .post-share-twitter:hover .icon
  fill #1da1f2

.post-share-links .post-share-links-inner .post-share-wechat:hover .icon
  fill #02df6d

#post-nav
  clearfix()
  position relative
  margin-top 20px
  .post-nav-link-wrap
    font-weight 600
    color color-gray
    box-sizing border-box
    border none
    &:hover
      color color-default
  #post-nav-older
    float right
  #post-nav-newer
    float left
  .post-nav-caption
    text-transform uppercase
    line-height 1em