#content-wrap
  clearfix()
  background white
  min-height min-height

#content-main
  clearfix()
  max-width content-width
  margin 60px auto
  .article
    width 100%
    padding 40px 0
    .post-header
      padding-bottom 18px
      .post-title
        font-size 24px
        text-transform uppercase
        font-family font-sans
        margin-bottom 0
        font-weight 600
        line-height 1.6
        a
          color color-default
          text-decoration none
          border-bottom none
          padding-bottom 3px
          &:hover
            border-bottom 3px solid color-gray
            transition border-bottom 0.1s ease-out
      .post-meta, .post-category
        color color-gray
        a
          font-size 14px
          line-height 1.6
          color color-gray
          text-decoration none
          border-bottom none
          &:hover
            border-bottom 1px solid color-gray
            transition border-bottom 0.1s ease-out
      .post-category
        margin-left 15px
        text-transform capitalize
        position relative
        .post-category-link
          margin-left 10px
        .icon
          position absolute
          top 0
          left -6px
          height 12px
          width 12px
          fill color-gray
    .post-content
      clearfix()
      .more-link
        text-transform uppercase
        font-weight 600
        padding-bottom 3px
        &:hover
          border-bottom 2px solid color-default
          transition border-bottom 0.1s ease-out
      h1, h2, h3, h4, h5, h6
        text-transform capitalize
      @media mq-normal
        h1::before, h2::before, h3::before, h4::before, h5::before, h6::before
          position absolute
          right calc(100% + 10px)
          bottom 0
          color color-gray
          font-size 0.85rem
          font-weight normal
          font-variant 'small-caps'
          font-family font-serif
          border 0
          border-radius 0
          left auto
          font none
          padding 0
          vertical-align baseline
          line-height 20px
        h1::before
          content 'H1'
          bottom 0.45em
        h2::before
          content 'H2'
          bottom 0.2em
        h3::before
          content 'H3'
          bottom 0.16em
        h4::before
          content 'H4'
          bottom 0.14em
        h5::before
          content 'H5'
          bottom 0.1em
        h6::before
          content 'H6'
          bottom 0.1em
      .video-container
        position relative
        padding-top (9 / 16 * 100)% // 16:9 ratio
        margin-bottom 16px
        height 0
        overflow hidden
        iframe, object, embed
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          margin-top 0
  .post-link-title .icon
    width 12px
    height 12px
    margin-right 10px

#post-separator
  clearfix()
  display block
  width 15%
  height 5px
  background color-default
  margin 50px 0

.post-footer
  clearfix()
  padding 20px 0
  line-height 1.6em
  border-bottom 1px solid color-body
  a
    font-weight 600

.post-tag-list
  padding-bottom 0
  padding-left 0
  .post-tag-list-item
    float left
    list-style none
    margin-right 20px
    .post-tag-list-link
      color color-gray
      padding-bottom 3px
      text-transform uppercase
      text-decoration none
      border none
      &:hover
        color color-default
        border-bottom 2px solid color-default
      &:before
        content '#'
        margin-right 3px

#post-nav
  clearfix()
  position relative
  margin-top 20px
  .post-nav-link-wrap
    font-weight 600
    color color-gray
    box-sizing border-box
    border none
    &:hover
      color color-default
  #post-nav-older
    float right
  #post-nav-newer
    float left
  .post-nav-caption
    text-transform uppercase
    line-height 1em

.post-share-links
  clearfix()
  float right
  @media mq-mobile
    width 100%
    margin-top 30px
  .icon
    width 24px
    height 24px
    margin-right 15px
    fill color-border
  a
    border none

.wechat-links
  position relative
  text-align center
  @media mq-mobile
    display none
  &:hover .wechat-qrcode-wrap
    visibility visible
    opacity 1
  .icon
    cursor pointer
  .wechat-qrcode-wrap
    position absolute
    top -195px
    left -62px
    visibility hidden
    transition 0.2s opacity ease, visibility 0.2s
    background-color #fff
    border 1px solid color-border
    border-radius 4px
    box-shadow 0 5px 10px rgba(0, 0, 0, 0.15)
    height 170px
    width 150px
    z-index 99999
    &:before
      border solid 7px transparent
      border-top-color color-border
      content ''
      position absolute
      bottom -14px
      left 68px
    &:after
      border solid 6px transparent
      border-top-color #fff
      content ''
      position absolute
      bottom -12px
      left 68px
    .wechat-qrcode-title, .wechat-qrcode-hint
      color #999
      font-size 12px
    .wechat-qrcode-title
      background-color color-body
      border-radius 4px
      height 32px
      line-height 32px
    .wechat-qrcode-img
      height 80px
      margin 10px auto
      width 80px
    .wechat-qrcode-hint
      line-height 15px
      margin 0 auto
      width 110px

.post-share-weibo:hover
  .icon
    fill #d52b2a

.post-share-twitter:hover
  .icon
    fill #1da1f2

.post-share-wechat:hover
  .icon
    fill #02df6d