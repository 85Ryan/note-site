.archives-wrap
  margin-bottom 30px
  .archive-year-wrap
    margin-bottom 15px
    .archive-year
      position relative
      font-size 28px
      font-weight 600
      color color-default
      text-decoration none
      border-bottom none
      &:hover
        border-bottom 3px solid color-default
        transition border-bottom 0.1s ease-out
      &:before
        content '#'
        position absolute
        right calc(100% + 10px)
        bottom 0.2em
        color color-gray
        font-size 1.25rem
        font-weight 800
        font-variant 'small-caps'
        font-family font-sans
        border 0
        border-radius 0
        left auto
        font none
        padding 0
        vertical-align baseline
        line-height 20px
      @media mq-mobile
        &:before
          content ''
        &:after
          content '#'
          position absolute
          right -20px
          bottom 0.2em
          color color-gray
          font-size 1.25rem
          font-weight 800
          font-variant 'small-caps'
          font-family font-sans
          border 0
          border-radius 0
          font none
          padding 0
          vertical-align baseline
          line-height 20px
  .archives
    margin-left 30px
    .archive-post
      margin-bottom 30px
      border-bottom 1px solid color-body
      .archive-post-title
        text-transform uppercase
        font-size 16px
        line-height 1
        a
          text-decoration none
          border-bottom none
          &:hover
            border-bottom 2px solid color-default
            transition border-bottom 0.1s ease-out
      .archive-post-meta
        font-size 12px
        color color-gray
        line-height 1
        a
          color color-gray
          text-decoration none
          border-bottom none
          &:hover
            border-bottom 1px solid color-gray
            transition border-bottom 0.1s ease-out