<%- partial('_partial/hero',{cache: true}) %>
<div id="content-wrap">
  <div class="wrapper">
    <div id="content-inner" class="inner">
      <section id="content-main">
        <% page.posts.each(function(post){ %>
        <%- partial('_partial/article', {post: post, index: true, cache: true}) %>
        <% }); %>
      </section>
      <% if (page.total > 1){ %>
      <nav id="page-nav">
        <div class="page-nav">
          <% if (page.prev){ %>
          <a class="pager prev" href="<%- config.root %><%- page.prev_link %>"><%- svg_icon('arrow') %></a>
          <% } %>
          <% if (page.next){ %>
          <a class="pager next" href="<%- config.root %><%- page.next_link %>"><%- svg_icon('arrow') %></a>
          <% } %>
        </div>
      </nav>
      <% } %>
    </div>
  </div>
</div>
